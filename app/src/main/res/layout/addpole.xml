    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="567dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="-16dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_enrollment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="#393939"
            android:fontFamily="@font/nanumgothicextrabold"
            android:gravity="center"
            android:text="전주 등록"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center|left"
            android:text="전주번호 부여"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tv_pole_code_a"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/border"

            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="center|left"
            android:hint="전주번호를 입력해주세요"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:textColorHint="#ACA9A9"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center|left"
            android:text="전주 높이"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_pole_height_a"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="center|left"
            android:hint="전주 높이를 입력해주세요"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:textColorHint="#ACA9A9"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center|left"
            android:text="전주 주소"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_pole_addr_a"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="center|left"
            android:hint="전주 주소를 입력해주세요"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:textColorHint="#ACA9A9"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center|left"
            android:text="관할 지역"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_pole_office_a"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="center|left"
            android:hint="사업소를 입력해주세요"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:textColorHint="#ACA9A9"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center|left"
            android:text="담당자 사원번호"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_emp_id_a"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="center|left"
            android:hint="사원번호를 입력해주세요"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:textColorHint="#ACA9A9"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/nanumgothicbold"
            android:gravity="center|left"
            android:text="전주 설치 일자"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edt_pole_date_a"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/border"
            android:backgroundTint="#FFFFFF"
            android:ems="10"
            android:fontFamily="@font/nanumgothicregular"
            android:gravity="center|left"
            android:hint="설치 일자를 입력해주세요"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:textColorHint="#ACA9A9"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/swc_transformer_yn_a"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:text="변압기"

                android:textColor="#1B1A1A"
                android:thumbTint="#989696"
                tools:ignore="TouchTargetSizeCheck" />

            <Switch
                android:id="@+id/swc_pole_com_a"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:text="통신선"
                android:textColor="#1B1A1A"
                android:thumbTint="#989696"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Switch
                android:id="@+id/swc_pole_high_a"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:text="고압선"
                android:textColor="#1B1A1A"
                android:thumbTint="#989696"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

            <Switch
                android:id="@+id/swc_pole_down_a"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:text="저압선"
                android:textColor="#1B1A1A"
                android:thumbTint="#989696"
                tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_close_a"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#dfeaff"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:insetRight="3dp"
                android:text="취소하기"
                android:textColor="#201E1E" />


            <Button
                android:id="@+id/btn_update_a"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#dfeaff"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:insetLeft="3dp"
                android:text="등록하기"
                android:textColor="#201E1E" />
        </LinearLayout>

    </LinearLayout>

    <!--</ScrollView>
