<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939"
    tools:context=".View.update_Pole">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="450dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_enrollment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:background="#393939"
                android:fontFamily="@font/nanumgothicextrabold"
                android:gravity="center"
                android:text="전주 정보 수정"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center|left"
                android:text="전주번호"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_pole_code_u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/nanumgothicregular"
                android:gravity="center|left"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="전주번호"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center|left"
                android:text="관할 지역"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_pole_office_u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/nanumgothicregular"
                android:gravity="center|left"
                android:hint="사업소를 입력해주세요"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center|left"
                android:text="담당자 사원번호"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/edt_emp_id_u"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/border"
                android:backgroundTint="#FFFFFF"
                android:ems="10"
                android:fontFamily="@font/nanumgothicregular"
                android:gravity="center|left"
                android:hint="사원번호를 입력해주세요"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="46dp"
                android:layout_marginBottom="6dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/swc_transformer_yn_u"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"

                    android:text="변압기"
                    android:thumbTint="#989696"
                    tools:ignore="TouchTargetSizeCheck" />

                <Switch
                    android:id="@+id/swc_pole_com_u"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="통신선"
                    android:thumbTint="#989696"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <Switch
                    android:id="@+id/swc_pole_high_u"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="고압선"
                    android:thumbTint="#989696"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <Switch
                    android:id="@+id/swc_pole_down_u"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumgothicbold"
                    android:gravity="center"
                    android:text="저압선"
                    android:thumbTint="#989696"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <Button
                android:id="@+id/btn_close_u"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#dfeaff"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:insetRight="3dp"
                android:text="취소하기"
                android:textColor="#1B1A1A" />


            <Button
                android:id="@+id/btn_update_u"
                android:layout_width="150dp"
                android:layout_height="48dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#dfeaff"
                android:fontFamily="@font/nanumgothicbold"
                android:gravity="center"
                android:insetLeft="3dp"
                android:text="등록하기"
                android:textColor="#1B1A1A" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
